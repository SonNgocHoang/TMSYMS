<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/truck_load_no" />

            <TextView
                android:textColor="@color/back"
                android:id="@+id/truckLoadNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" TL - 16" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/created" />

        <TextView
            android:textColor="@color/back"
            android:id="@+id/tvCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 20/10/1994" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Voyage" />

        <TextView
            android:textColor="@color/back"
            android:id="@+id/tvVoyge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" VY-357 - Saskatoon - La Tuque" />
    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:padding="3dp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Scheduled" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back"></View>
</LinearLayout>